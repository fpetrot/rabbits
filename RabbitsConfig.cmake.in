@PACKAGE_INIT@

set_and_check(Rabbits_INCLUDE_DIR "@PACKAGE_INCLUDE_INSTALL_DIR@")
set_and_check(Rabbits_LIB_DIR "@PACKAGE_LIB_INSTALL_DIR@")

check_required_components(Rabbits)

set(CMAKE_MODULE_PATH ${CMAKE_MODULE_PATH} ${CMAKE_CURRENT_LIST_DIR})
find_package(SystemC REQUIRED)

find_package(Ruby 2.0 REQUIRED)

set(RABBITS_FACTORY_SCRIPT_PATH "${Rabbits_LIB_DIR}/rabbits/gen-factory.rb")

include("${CMAKE_CURRENT_LIST_DIR}/rabbits_add_files.cmake")
include("${CMAKE_CURRENT_LIST_DIR}/rabbits_components.cmake")

include_directories(
	"${SYSTEMC_INCLUDE_DIR}"
	"${Rabbits_INCLUDE_DIR}"
)
